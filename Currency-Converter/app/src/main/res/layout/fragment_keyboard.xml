<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.KeyboardFragment">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/keyboard_clear"
            style="@style/KeyboardButton"
            android:text="Reset" />

        <Button
            android:id="@+id/keyboard_convert"
            style="@style/KeyboardButton"
            android:text="Convert" />

        <Button
            android:id="@+id/keyboard_delete"
            android:text="Delete"
            style="@style/KeyboardButton" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/keyboard_1"
            style="@style/KeyboardButton"
            android:text="1"

            />

        <Button
            android:id="@+id/keyboard_2"
            style="@style/KeyboardButton"
            android:text="2" />

        <Button
            android:id="@+id/keyboard_3"
            style="@style/KeyboardButton"
            android:text="3" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/keyboard_4"
            android:text="4"
            style="@style/KeyboardButton" />

        <Button
            android:id="@+id/keyboard_5"
            android:text="5"
            style="@style/KeyboardButton" />

        <Button
            android:id="@+id/keyboard_6"
            android:text="6"
            style="@style/KeyboardButton" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/keyboard_7"
            android:text="7"
            style="@style/KeyboardButton" />

        <Button
            android:id="@+id/keyboard_8"
            android:text="8"
            style="@style/KeyboardButton" />

        <Button
            android:id="@+id/keyboard_9"
            android:text="9"
            style="@style/KeyboardButton" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/keyboard_000"
            android:text="000"
            style="@style/KeyboardButton" />

        <Button
            android:id="@+id/keyboard_0"
            android:text="0"
            style="@style/KeyboardButton" />

        <Button
            android:id="@+id/keyboard_float"
            android:text=","
            style="@style/KeyboardButton" />
    </TableRow>
</TableLayout>